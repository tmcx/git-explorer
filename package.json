{
  "name": "git-explorer",
  "displayName": "git-explorer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "main-view",
          "title": "Git Explorer",
          "icon": "media/dark-icon.svg"
        }
      ]
    },
    "views": {
      "main-view": [
        {
          "id": "tdp-content",
          "name": "Content"
        }
      ]
    },
    "commands": [
      {
        "title": "Refresh",
        "command": "cmd-refresh-content",
        "icon": "media/refresh.svg"
      },
      {
        "title": "Clone",
        "command": "cmd-git-clone",
        "icon": "media/clone.svg"
      },
      {
        "title": "Go To Page",
        "command": "cmd-go-to",
        "icon": "media/go-to.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cmd-refresh-content",
          "when": "view == tdp-content",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cmd-git-clone",
          "when": "view == tdp-content && viewItem == repository",
          "group": "inline"
        },
        {
          "command": "cmd-go-to",
          "when": "view == tdp-content",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
